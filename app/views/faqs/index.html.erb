<h1><%= t('frequently_asked_questions') %></h1>

<div id="faqs">
  <% @categories.each do |category| %>
    <div id="<%= dom_id category -%>" class="category">
      <h2><%= h category.name %></h2>
      <ul class="answers">
        <% category.questions.each do |question| %>
          <li>
            <a class="question" id="<%= dom_id question -%>" href="#<%= "answer_#{question.id}" %>">
              <%= raw(question.question) -%>
            </a>
            <div class="answer" id="<%= "answer_#{question.id}"-%>">
              <%= raw(question.answer) %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>   

<% content_for :sidebar do %>
  <% hook :homepage_sidebar_navigation do %>
    <% if "products" == @current_controller && @taxon %>
      <%= render "shared/filters" %>
    <% else %>
      <%= render "shared/taxonomies" %>
    <% end %>
  <% end %>
<% end %>

<%= content_for :head do %>  
  <%= stylesheet_link_tag 'spree_faq' %>
  <%= javascript_tag do %>
    $(function() {
      $('.answer').hide();
      $('.question').click(function() {
        var id = $(this).attr('id').split('_')[1];
        $('#answer_' + id).slideToggle();
      });
    });
  <% end %>
<% end %>
